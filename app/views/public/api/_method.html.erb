<div id="<%= "#{method[:type]}-#{method[:path]}" %>">
  <div class="flex flex-col gap-4">
    <div role="heading" aria-level="3" class="flex items-center gap-2">
      <%= react_component "Pill", props: {color: "primary", children: method[:type].upcase }, prerender: true %>
      <span><%= method[:path] %></span>
    </div>
    <p><%= method[:description].html_safe %></p>
    <%= react_component "CodeSnippet", props: {
          children: method[:is_oauth].present? ? "https://gumroad.com#{method[:path]}" : "https://api.gumroad.com/v2#{method[:path]}"
        }, prerender: true %>
    <% if method[:parameters_layout].present? %>
      <div class="parameters">
        <h4>Parameters:</h4>
        <%= render "public/api/parameters/#{method[:parameters_layout]}" %>
      </div>
    <% end %>
    <% if method[:curl_layout].present? %>
      <%= react_component "CodeSnippet", props: {
            caption: "cURL example",
            children: render("public/api/curl/#{method[:curl_layout]}")
          }, prerender: true %>
    <% end %>
    <% if method[:response_layout].present? %>
      <%= react_component "CodeSnippet", props: {
            caption: "Example response:",
            children: render("public/api/response/#{method[:response_layout]}")
          }, prerender: true %>
    <% end %>
  </div>
</div>
